@model DeleteVehicleViewModel

<h2 class="mb-4 text-center">Check out @Model.VehicleType - @Model.RegNumber</h2>

<div class="container">
    <div class=" card shadow-sm p-4 max-auto">
        <p class="lead mb-4">
            You are about to checkout a(n) <strong>
                @Model.VehicleType</strong> with license number <strong>
                @Model.RegNumber
            </strong>
        </p>
        <form asp-action="Checkout">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RegNumber" />
            <input type="hidden" asp-for="VehicleType" />
            <div class="form-group mb-4">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="WantReceipt" />
                    I want a receipt
                </label>
            </div>
            <input type="submit" value="Check out" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-outline-secondary">Go back</a>
        </form>
        <div class="alert alert-warning mt-4 mb-4" role="alert">
            ⚠️ <strong>Warning!</strong> This action cannot be undone.
        </div>
    </div>
</div>