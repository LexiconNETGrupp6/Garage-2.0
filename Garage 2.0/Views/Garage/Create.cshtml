@model Garage_2._0.Models.Vehicle
@{
    ViewData["Title"] = "Create";
}

<h1>Check in vehicle</h1>

<div class="py-5" style="background: #f8fafc;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="card shadow border-0">
                    <div class="card-body card bg-dark  text-white p-4">
                        <h1 class="h3 mb-3">Check in vehicle</h1>

                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            <div class="form-check mb-3">
                                <label asp-for="RegNumber" class="form-label"></label>
                                <input asp-for="RegNumber" class="form-control text-uppercase" />
                                <span asp-validation-for="RegNumber" class="text-danger"></span>
                                <div class="form-text">Example: ABC123</div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="VehicleType" class="form-label"></label>
                                <select asp-for="VehicleType" class="form-select"
                                        asp-items="Html.GetEnumSelectList<Garage_2._0.Models.VehicleType>()">
                                </select>
                                <span asp-validation-for="VehicleType" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Color" class="form-label"></label>
                                <input asp-for="Color" class="form-control" />
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Brand" class="form-label"></label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Model" class="form-label"></label>
                                <input asp-for="Model" class="form-control" />
                                <span asp-validation-for="Model" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NumberOfWheels" class="form-label"></label>
                                <input asp-for="NumberOfWheels" class="form-control" type="number" min="0" />
                                <span asp-validation-for="NumberOfWheels" class="text-danger"></span>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-success">Check in</button>
                                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>

                <p class="text-center text-muted mt-3 mb-0" style="font-size: .9rem;">
                    Tip: Registration number is saved in UPPERCASE.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

